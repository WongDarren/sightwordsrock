@model TeacherLoginVM

@{
    ViewBag.Title = "Teacher Login";
}

<section id="cover">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white">
        <div class="col-md-6 offset-md-3 text-center">
          <h2>Welcome, Teacher!</h2>
          <h3>Please sign in:</h3><br>
          <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
              <input asp-for="Email" class="form-control form-control-lg" placeholder="email">
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
              <input asp-for="Password" class="form-control form-control-lg" placeholder="password">
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
              <div class="checkbox">
                <label asp-for="RememberMe">
                  <input asp-for="RememberMe"/>
                  @Html.DisplayNameFor(m => m.RememberMe)
                </label>
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Login</button>
            <br>
            <br>
            <span class="psw"><a href="#">Forgot password?</a></span>
            <br>
            <br>
            <a role="button" class="btn btn-primary btn-lg" asp-area="" asp-controller="Teacher" asp-action="CreateAccount">
              Create Account
            </a> 
          </form>
          <a role="button" class="btn btn-primary btn-lg" asp-area="" asp-controller="Teacher" asp-action="TeacherDashboard">
              Dashboard
          </a> 
        </div>  
      </div>
    </div>
  </div>
</section>