@model CreateAccountVM

<section id="cover">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white">
        <div class="col-md-6 offset-md-3 text-center">
          <h1 style="font-size: 30px;">Sight Words Learning Center</h1>
          <h3>Create Account</h3>

          <div class="row">
            <div class="col-md-12">
              <form method="post" class="form-container">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                  <input asp-for="FirstName" class="form-control form-control-lg" placeholder="first name">
                  <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <input asp-for="LastName" class="form-control form-control-lg" placeholder="last name">
                  <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <input asp-for="School" class="form-control form-control-lg" placeholder="school">
                  <!-- <span asp-validation-for="FirstName" class="text-danger"></span> -->
                </div>
                <div class="form-group">
                  <input asp-for="Email" class="form-control form-control-lg" placeholder="email">
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <input asp-for="Password" class="form-control form-control-lg" placeholder="password">
                  <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="confirm password">
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <a asp-controller="" asp-action="">
                  <button type="submit" class="btn btn-primary btn-lg">Register</button>
                </a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  var form = document.querySelector('.needs-validation');

  form.addEventListener('submit', function(event){
      if (form.checkValidity()===false){
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
  })
</script>