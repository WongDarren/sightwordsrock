@model ApplicationUser


<div class="container" style="margin-top: 30px;">
  <div class="d-flex justify-content-between">
      <div>
         <h2>Welcome to your Dashboard</h2>
         <h1>@Model.FirstName @Model.LastName</h1>
      </div>
      <form method="post" asp-action="logout" asp-controller="Teacher">
        <div>
          <button type="submit" class="btn btn-primary btn-lg">Sign Out</button>
        </div>
      </form>
  </div>
  <br>
  <div class="row" style="color:white">
      <div class="col-xs-12 col-md-6 text-center">
        <a role="button" class="btn btn-primary btn-lg btn-block" asp-controller="Teacher" asp-action="ManageAccount" asp-route-id="@Model.Id"> 
          <span>
            <i class="fas fa-user-circle fa-5x"></i>
          </span>
          <br>
          Manage Account 
        </a>
      </div>
    <div class="col-xs-12 col-md-6 text-center">
      <a role="button" class="btn btn-primary btn-lg btn-block" asp-controller="Teacher" asp-action="StudentStats"> 
        <span>
          <i class="fas fa-table fa-5x"></i>
        </span>
        <br>
        View Student Progress
      </a>
    </div>
  </div>

</div>
