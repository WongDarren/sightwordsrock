@model StudentLoginVM

@{
    ViewData["Title"] = "Student Login";
}

<section id="header">
  <a role="button" class="btn btn-outline-primary btn-lg" asp-area="" asp-controller="Student" asp-action="StudentLogin">Student Login</a><span>test</span>
</section>

<section id="loginStyle">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="col-md-6 offset-md-3 text-center">
        <span class="text-white">
          <h3>Sight Words Learning Center</h1>
          <h3>Password Reset Form</h3>
        </span>
        <br/>
        
        <div class="col-md-12">
          <form method="post" class="form-container">
            <div asp-validation-summary="All" class="text-danger"></div>
            <p>Forgot your password? Enter your Student I.D. below, and we will send instructions to your parent on setting up a new one.</p>
              <br/>
              <div style="text-align:left;">
                <div class="form-group row">
                  <label style="text-align:right;" class="col-sm-4 col-form-label form-control-label">Student I.D.</label>
                  <div class="col-sm-8">
                    <input asp-for="StudentId" class="form-control form-control-lg" placeholder="Enter Student I.D. Here">
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                  </div>
                </div>
              </div>
              <a asp-controller="" asp-action="">
                <button style="text-align: center;" type="submit" class="btn btn-primary btn-lg">Reset My Password</button>
              </a>
          </form>
        </div>
      </div>
    </div>
    <br/>
  </div>
</section>