@{
    ViewData["Title"] = "Home Page";
}

<div class="container" style="margin-top: 30px;">
  <div class="d-flex justify-content-between">
      <div>
         <h1>Student Dashboard</h1>
      </div>
      <form method="post" asp-action="logout" asp-controller="Student">
        <div>
          <button type="submit" class="btn btn-primary btn-lg">Sign Out</button>
        </div>
      </form>
  </div>

  <div id="inProgress" class="modules_row">
    <h3>Continue Working on Module in Progress</h3>

    <div class="row">
      <!--loop to print all modules that are flagged as in progress, started, unfinished, whatever (if any)-->
      @for(var i = 0; i < 2; i++) {
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">Module @(i+1)</h5>
              <p class="card-text">Last played: 2 days ago</p>
              <p class="card-text">Stages completed: 2/5</p>
              <a href="#" class="btn btn-primary">Play Module</a>
            </div>
          </div>
        </div>
      }
    </div>
  </div>

  <div id="newStage" class="modules_row">
    <h3>Start a New Module</h3>

    <div class="row">
      <!--loop to print all modules that we have implemented-->
      @for(var i = 0; i < 4; i++) {
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">Module @(i+1)</h5>
              <p class="card-text">Corresponding module description.</p>
              <a asp-area="" asp-controller="Student" asp-action="Stages" class="btn btn-primary">Play Module</a>
            </div>
          </div>
        </div>
      }
    </div>

  </div>

  <div id="completeStage" class="modules_row">
    <h3>Modules Completed</h3>

    <div class="row">
      <!--loop to print all completed modules (if any)-->
      @for(var i = 0; i < 2; i++) {
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">Module @(i+1)</h5>
              <p class="card-text">Completed: Oct 20, 20</p>
              <p class="card-text">Stages completed: 5/5</p>
              <p class="card-text">Total score: 20/20</p>
              <a href="#" class="btn btn-primary">Play Module</a>
            </div>
          </div>
        </div>
      }
    </div>
  </div>

</div>
