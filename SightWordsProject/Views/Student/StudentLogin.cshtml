@model StudentLoginVM

@{
    ViewData["Title"] = "Student Login";
}

<section id="header">
  <a role="button" class="btn btn-outline-primary btn-lg" asp-area="" asp-controller="Home" asp-action="Index">User Select</a>
</section>

<section class="fullHeight" id="loginStyle">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white">
        <div class="col-md-6 offset-md-3 text-center">
          <h2>Welcome, Student!</h2>
          <h3>Please sign in below!</h3><br>
          <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
              <input asp-for="StudentId" class="form-control form-control-lg" placeholder="Student Id">
              <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
              <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
              <div class="checkbox">
                <label asp-for="RememberMe">
                  <input asp-for="RememberMe"/>
                  @Html.DisplayNameFor(m => m.RememberMe)
                </label>
              </div>
            </div>
            <!-- <input class="form-control form-control-lg" type="text" placeholder="Student Access Code">
            <br>
            <input class="form-control form-control-lg" type="text" placeholder="Student ID Number">
            <br> -->
            <button type="submit" class="btn btn-primary btn-lg">Login</button>
            <br>
            <br>
            <span class="psw"><a href="#">Forgot password?</a></span>
            <br>
            <br>
            <a role="button" class="btn btn-primary btn-lg" asp-area="" asp-controller="Student" asp-action="CreateAccount">
              Create Account
            </a> 
            <br>
            <br>
            <!-- <a role="button" class="btn btn-primary btn-lg" asp-area="" asp-controller="Student" asp-action="StudentDashboard">
              Student Dashboard
            </a>   -->
          </form>
        </div>  
      </div>
    </div>
  </div>
</section>