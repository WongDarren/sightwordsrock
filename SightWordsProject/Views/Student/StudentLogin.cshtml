@{
    ViewData["Title"] = "Home Page";
}

<section id="header">
  <a role="button" class="btn btn-outline-primary btn-lg" asp-area="" asp-controller="Home" asp-action="Index">User Select</a>
</section>

<section id="loginStyle">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white">
        <div class="col-md-6 offset-md-3 text-center">
          <h2>Welcome, Student!</h2>
          <h3>Please sign in below!</h3><br>
          <form>
            <input class="form-control form-control-lg" type="text" placeholder="Student Access Code">
            <br>
            <input class="form-control form-control-lg" type="text" placeholder="Student ID Number">
            <br>
            <button type="submit" class="btn btn-primary btn-lg">Login</button>
            <br>
            <br>
            <span class="psw"><a href="#">Forgot password?</a></span>
            <br>
            <br>
            <a role="button" class="btn btn-primary btn-lg" asp-area="" asp-controller="Student" asp-action="CreateAccount">
              Create Account
            </a> 
            <br>
            <br>
            <a role="button" class="btn btn-primary btn-lg" asp-area="" asp-controller="Student" asp-action="StudentDashboard">
              Student Dashboard
            </a>  
          </form>
        </div>  
      </div>
    </div>
  </div>
</section>